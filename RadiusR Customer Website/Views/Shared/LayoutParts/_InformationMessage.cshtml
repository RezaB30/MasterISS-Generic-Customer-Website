@using RadiusR_Customer_Website.Utilities
@{
    var subscriptionBag = User.GetSubscriptionBag();

}

@if (subscriptionBag.Count() > 1)
{
    <div id="information-message" class="tooltiptext" style="display:none;">
        <div class="tooltiptext-animate"></div>
        @RadiusRCustomerWebSite.Localization.Common.SubscriptionInformationTitle
        <br />
        <a href="javascript:void(0)" onclick="CloseInformationMessage();" style="color:red;">@RadiusRCustomerWebSite.Localization.Common.Close</a>
    </div>
}
